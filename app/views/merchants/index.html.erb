<h1>Choose store for reward!</h1>
<br>

<% @merchants.each do |merchant| %>
  <div class="col-xs-12 col-md-6 text-center">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <%= merchant.name %>
      </div>
      <div class="panel-body">
        <div>
          <%= image_tag merchant.logo_url, height: 200, width: 200 %> 
        </div>
        <br>
        <div class='lead'>
          Get $<%= merchant.cash_prize %> online credit for <%= merchant.meals_required %> meals.
        </div>
        <%= link_to "Choose", new_merchant_reward_path(merchant), class: 'btn btn-success btn-block' %>
      </div>
    </div>
  </div>
<% end %>